! Cursor theme
Xcursor.theme: DMZ-White

! Fonts
Xft.antialias:  true
Xft.hinting:    true
Xft.rgba:       rgb
Xft.hintstyle: hintfull

URxvt.font:                xft:UbuntuMono:size=11,xft:Fira Mono:size=11,xft:Hack:size=11,xft:DejaVu Sans Mono:size=11,xft:Arial:size=11,xft:DejaVu Sans:size=11,xft:FontAwesome:size=14
!URxvt.boldFont:
!URxvt.boldFont:            xft:Fira Mono:size=12:bold,xft:Hack:size=12:bold,xft:Arial:size=12:bold,xft:Unifont:size=14,xft:FontAwesome:size=14
!URxvt.italicFont:          xft:Fira Mono:size=12:italic,xft:Hack:size=12:italic,xft:Arial:size=12:italic,xft:Unifont:size=14,xft:FontAwesome:size=14
!URxvt.boldItalicFont:      xft:Fira Mono:size=12:bold:italic,xft:Hack:size=12:bold:italic,xft:Arial:size=12:bold:italic,xft:Unifont:size=14,xft:FontAwesome:size=14

URxvt.letterSpace:         0

URxvt.modifier:            alt

! Borders
URxvt.internalBorder:      8
URxvt.externalBorder:      0

! Disable scrollbar
URxvt.scrollBar:           false
URxvt*fading:              30

! Load perl plugins
URxvt.perl-ext-common:     clipboard,font-size,keyboard-select

! keyboard-select
! https://github.com/muennich/urxvt-perls
URxvt.keysym.M-Escape: perl:keyboard-select:activate

! FullScreen
URxvt.keysym.F11:          perl:fullscreen:switch

! font-size keybindings
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show

! URxvt.resize-font.smaller: C-Down
! URxvt.resize-font.bigger:  C-Up

URxvt.url-launcher:        /usr/bin/firefox
URxvt.keysym.M-Delete:     perl:matcher:list
URxvt.colorUL:             #7780a1

URxvt*iso14755: False
URxvt*iso1475_52: False

! Copy & Paste
URxvt.keysym.C-C:   perl:clipboard:copy
URxvt.keysym.C-V:   perl:clipboard:paste

! URxvt.clipboard.copycmd:  xsel -ib
! URxvt.clipboard.pastecmd: xsel -ob

#include ".Xresources-colorscheme-gruvbox"
